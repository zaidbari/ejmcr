{% include "home/components/header.twig" %}
<div class="container-fluid px-4">

	{% if SETTINGS.show_metrics %}
	
	<div class="row my-4">
		<div class="col-md-4">
			<div class="card py-4 px-3 text-center border-0 rounded-2 shadow">
				<h4><span class="badge bg-primary">{{ journal_data.decission }}</span> Days</h4>
				<h5>{{ journal_data.decission_text }}</h5>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card py-4 px-3 text-center border-0 rounded-2 shadow">
				<h4><span class="badge bg-primary">{{ journal_data.acceptance }}</span> Days</h4>
				<h5>{{ journal_data.acceptance_text }}</h5>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card py-4 px-3 text-center border-0 rounded-2 shadow">
				<h4><span class="badge bg-primary">{{ journal_data.rate }}</span> %</h4>
				<h5>{{ journal_data.rate_text }}</h5>
			</div>
		</div>
	</div>
	{% endif %}
	{% include "home/components/articles.twig" %}
	{% include "home/components/editorial_board.twig" %}
	
</div>