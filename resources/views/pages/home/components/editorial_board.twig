<div class="bg-light px-md-5 px-2 py-5 rounded shadow">

{% for member in editorial_board %}
	<div class="member">
		<h2 class="h4 text-primary">{{ member.designation }}</h2>
		<h4 class="h5 fw-bold text-primary">{{ member.name | raw }}</h4>

		<div class="row mb-4">
			<div class="col-lg-10 col-md-8 align-self-center">
				<p style="font-weight: bold" class="">{{ member.affiliation | raw }}</p>
				{{ member.details | raw }}
			</div>
			<div class="col-lg-2 col-md-4 align-self-center">
				<img 
					class="img-fluid border-primary border-2 border rounded-circle shadow" 
					src="{{ _ENV('JOURNAL_DOMAIN') }}admin/uploads/editors/{{ member.image }}" 
					alt="{{ member.name }}"
					loading="lazy"
				/>
			</div>
		</div>
	</div>
{% endfor %}
</div>
