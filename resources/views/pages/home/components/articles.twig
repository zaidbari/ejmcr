<section>
	<ul class="nav nav-pills nav-fill mb-4" id="articles_tab" role="tablist">
		<li class="nav-item">
			<a class="nav-link active" id="read-tab" data-toggle="tab" href="#most_read_articles" role="tab" aria-controls="home" aria-selected="true">Most Read Articles</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" id="downloaded-tab" data-toggle="tab" href="#most_downloaded_articles" role="tab" aria-controls="profile" aria-selected="false">Most Downloaded Articles</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" id="cited-tab" data-toggle="tab" href="#most_cited_articles" role="tab" aria-controls="cited" aria-selected="false">Most Cited Articles</a>
		</li>
	</ul>
	<div class="mb-5">
		<div class="tab-content" id="articles_tab_content">
			<div class="tab-pane article_list fade show active" id="most_read_articles" role="tabpanel" aria-labelledby="most_read_articles-tab"> 
				
				{% for article in most_read_articles %}
					<div>
						<h1>{{ article.title }}</h1>
						<p>{{ article.authors }}</p>
						<div>
							<p>Year: {{ article.issue_details.year }}</p>
							<p>Volume: {{ article.issue_details.volume }}</p>
							<p>Issue: {{ article.issue_details.issue }}</p>
							<p>Pages: {{ article.issue_details.start_page }} - {{ article.issue_details.end_page }}</p>
						</div>
						<div>
							<a class="btn btn-primary btn-sm" href="{{ article.abstract_url }}">Abstract</a>
							<a class="btn btn-secondary btn-sm" href="{{ article.doi_url }}">DOI</a>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="tab-pane article_list fade" id="most_downloaded_articles" role="tabpanel" aria-labelledby="most_downloaded_articles-tab"> 
				{% for article in most_downloaded_articles %}
					<div>
						<h1>{{ article.title }}</h1>
						<p>{{ article.authors }}</p>
						<div>
							<p>Year: {{ article.issue_details.year }}</p>
							<p>Volume: {{ article.issue_details.volume }}</p>
							<p>Issue: {{ article.issue_details.issue }}</p>
							<p>Pages: {{ article.issue_details.start_page }} - {{ article.issue_details.end_page }}</p>
						</div>
						<div>
							<a class="btn btn-primary btn-sm" href="{{ article.abstract_url }}">Abstract</a>
							<a class="btn btn-secondary btn-sm" href="{{ article.doi_url }}">DOI</a>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="tab-pane article_list fade" id="most_cited_articles" role="tabpanel" aria-labelledby="most_cited_articles-tab"> 
				{% for article in most_cited_articles %}
					<div>
						<h1>{{ article.title }}</h1>
						<p>{{ article.authors }}</p>
						<div>
							<p>Year: {{ article.issue_details.year }}</p>
							<p>Volume: {{ article.issue_details.volume }}</p>
							<p>Issue: {{ article.issue_details.issue }}</p>
							<p>Pages: {{ article.issue_details.start_page }} - {{ article.issue_details.end_page }}</p>
						</div>
						<div>
							<a class="btn btn-primary btn-sm" href="{{ article.abstract_url }}">Abstract</a>
							<a class="btn btn-secondary btn-sm" href="{{ article.doi_url }}">DOI</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>