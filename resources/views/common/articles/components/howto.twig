<div class="tab-pane fade" id="how_cite" role="tabpanel" aria-labelledby="how_cite-tab">
{% for key,reference in data.references %}
	<div class="card">
		<div class="card-header">
			<h5 class="mb-0">
				<button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ key }}" aria-expanded="false" aria-controls="collapse{{ key }}">
					{{ reference.style }}
				</button>
			</h5>
		</div>
		<div id="collapse{{ key }}" class="collapse" aria-labelledby="heading{{ key }}" data-bs-parent="#how_cite">
			<div class="card-body">
				{{ reference.reference }} doi: <a href="http://doi.org/{{data.doi}}" title="Link to doi authority" target="_blank" rel="noopener noreferrer">{{ data.doi }}</a>
			</div>
		</div>
	</div>
{% endfor %}
</div>
