<div class="tab-pane fade" id="article_info" role="tabpanel" aria-labelledby="article_info-tab">
	<h3 class="text-primary mb-3">Authors</h3>
	{% for name,author in article_info.authors %}
		<div>
				<h4>{{ name }}</h4>
				<p>{{ author.affiliation }}</p>
				<a class="btn btn-outline-secondary btn-sm" href="{{author.google_scholar}}" target="_blank" rel="noopener noreferrer">Google Scholor Articles</a>
				<a class="btn btn-outline-secondary btn-sm" href="{{author.pubmed}}" target="_blank" rel="noopener noreferrer">Pubmed Articles</a>
				<hr />
		</div>
	{% endfor %}
		<h3 class="text-primary mb-3">Correspondence to:</h3>
		<p>{{ article_info.correspondence.name }} <a href="mailto:{{article_info.correspondence.email}}" target="_blank">{{article_info.correspondence.email}}</a></p>
		<h3 class="text-primary mb-3">Publication history:</h3>
		<p>{{ article_info.history | raw}}</p>
</div>
