{% if SETTINGS.show_article and featured_article.featured_title %}
<hr />
<h3 class="h2 text-primary mb-3">Featured article</h3>
<hr>
    {% if featured_article.featured_image %}
        <img loading="lazy" src="/uploads/featured/{{ featured_article.featured_image }}" alt="{{ _ENV('JOURNAL_TITLE') }} featured article" class="img-fluid mb-4 shadow rounded-3"/>
    {% endif %}
    <h3 class="h5 text-primary mb-3">{{ featured_article.featured_title }}</h3>
    <div>{{ decode(featured_article.featured_text) | raw }}</div>
    <div>
        <a href="{{ featured_article.featured_url }}" class="btn btn-primary px-4" target="_blank" rel="noopener noreferrer">Read full article</a>
    </div>
{% endif %}

{% if news %}
		<hr />
			<h3 class="h2 text-primary mb-3">News</h3>
		<hr>
		<div class="list-group">
				{% for item in news %}
					{% if item.news_image %}
							<img loading="lazy" src="/uploads/news/{{ item.news_image }}" alt="{{ item.news_title }}" class="img-fluid mb-4 shadow rounded-3"/>
					{% endif %}
					<h3 class="h5 text-primary mb-3">{{ item.news_title }}</h3>
					<p class="mb-1">{{ item.news_description }}</p>
					
					{% if item.news_url %}
							<a href="{{ item.news_url }}" class="btn btn-primary px-4" target="_blank" rel="noopener noreferrer">Learn More</a>
					{% endif %}
				{% endfor %}
		</div>
{% endif %}